<div class="text-center padded">
  <div class="container">
    <div class="row">
      <h1>Find the Longest Word</h1>
    </div>

    <div class="row">
      <div class="wrapper-grey">
        <h3>Here is your grid:</h3>
        <p> <font size="+10"><%= @grid %></font></p>
      </div>

      <div class="row">
        <h3>What's your best shot?</h3>
        <form action="/score" method="get">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="text" name="attempt">
          <input type="hidden" name="start_time" value="<%= @start_time %>">
          <input type="hidden" name="grid" value="<%= @grid %>">
          <input type="submit" value="Go on!">
        </form>
        <h4><%= link_to "Get a New Grid", game_path %></h4>
      </div>
    </div>
  </div>
</div>
